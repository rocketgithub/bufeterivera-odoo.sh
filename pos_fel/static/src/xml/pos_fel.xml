<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <t t-jquery=".pos-sale-ticket" t-operation="replace">
            <div class="pos-sale-ticket" style="font-size: 190%; zoom: 90%;">
                <t t-if="firma_fel || order.get_paymentlines().length == 0">


                    <!--<br/>-->
                    <center>
                    <!--<t t-if='receipt.company.logo'>
                        <img class="pos-receipt-logo" t-att-src='receipt.company.logo' alt="Logo" style='text-align:center'/>
                    </t>-->
                    <br/>
                    <t t-esc="widget.pos.company.name"/><br/>
                    NIT: <t t-esc="widget.pos.company.vat"/><br/>
                    <t t-if='widget.pos.config.name === "CAJA Majadas" || widget.pos.config.name === "Majadas 1"'>
                    	Interior Parque Comercial Majadas <br/>
						Locales 19 y 20 <br/>
						Tel: 2473-8161
                    </t>
                    <t t-if='widget.pos.config.name === "CAJA Escala" || widget.pos.config.name === "Majadas 1"'>
                    	Km. 14.5 Carretera a El Salvador <br/>
                    	C.C. ESCALA, Local 27  <br/>
                    	Tel: 6634-5322 <br/>
                    </t>
                    <t t-if="receipt.header">
                        <div style='text-align:center'>
                            <t t-esc="receipt.header" />
                        </div>
                        <br/>
                    </t>
                    <t t-if="widget.pos.invoice_journal_address">
                        <t t-esc="widget.pos.invoice_journal_address.name"/><br/>
                        <t t-esc="widget.pos.invoice_journal_address.street"/><br/>
                    </t>
                    <br/>
                    <t t-if="firma_fel">
                    	<br/>
                    	FACTURA <br/>
                        Documento Tributario Electrónico <br/>
			 FEL<br/>
                        Factura Electrónica<br/>
                        <strong>Serie: </strong><t t-esc="serie_fel || ''"/><br/>
                        <strong>Número: </strong><t t-esc="numero_fel || ''"/><br/>
                    </t>
                	</center>
                    <br/>
                    <div class="datos_factura">
                        Fecha: <t t-esc="order.formatted_validation_date"/><br/>
                        Empleado: <t t-esc="widget.pos.get_cashier().name"/><br/>
                        <br/>
                        NIT: <t t-esc="order.get_client().vat ? order.get_client().vat : 'CF'"/><br/>
                        Nombre: <t t-esc="order.get_client().name"/><br/>
                        Dirección: <t t-if="order.get_client().street" t-esc="order.get_client().street"/> <t t-if="order.get_client().street2" t-esc="order.get_client().street2"/> <t t-if="order.get_client().city" t-esc="order.get_client().city"/><br/><br/>
                    </div>
                    <table style="font-size:14px" class='receipt-orderlines'>
                        <colgroup>
                           <col width='10%' />
                            <col width='25%' />
                            <col width='27%' />
                        </colgroup>
                        <tr style="font-weight:bold;border: 1px solid black">
                        	<td >Ctd</td>
                        	<td class="pos-left-align">Descripcion</td>
                        	<td class="pos-right-align">Precio</td>
                        </tr>
                        <tr t-foreach="orderlines" t-as="orderline">
                        	<td class="pos-center-align">
                                <t t-esc="orderline.get_quantity_str_with_unit()"/>
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="orderline.get_product().display_name"/>
                                <t t-if="orderline.get_discount() > 0">
                                    <div class="pos-disc-font">
                                        Con un descuento de <t t-esc="orderline.get_discount()"/>% 
                                    </div>
                                </t>
                                <div class="linea_extras">
                                    <t t-if="orderline.get_note &amp;&amp; orderline.get_note()">
                                        <span t-esc="orderline.get_note()"/>
                                    </t>
                                    <t t-if="orderline.pack_lot_lines">
                                        <t t-foreach="orderline.pack_lot_lines.models" t-as="linea">
                                            <span t-esc="linea.attributes['lot_name']"/><br/>
                                        </t>
                                    </t>
                                </div>
                            </td>
                            
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <table class='receipt-total'>
                        <colgroup>
                            <col width='10%' />
                            <col width='20%' />
                        </colgroup>
                        <tr class="emph">
                            <td>Total:</td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <table class='receipt-paymentlines'>
                        <t t-foreach="paymentlines" t-as="line">
                            <colgroup>
                                <col width='10%' />
                                <col width='20%' />
                            </colgroup>
                            <tr>
                                <td>
                                    <t t-esc="line.name"/>
                                </td>
                                <td class="pos-right-align">
                                    <t t-esc="widget.format_currency(line.get_amount())"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                    <br/>
                    <table class='receipt-change'>
                        <colgroup>
                            <col width='40%' />
                            <col width='40%' />
                        </colgroup>
                        <tr>
                            <td>Cambio:</td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(order.get_change())"/>
                            </td>
                        </tr>
                    </table>
                    <br/><br/>
                    <t t-if="!certificador_fel">
                    	<div class="pos-center-align">
                        Sujeto a pagos trimestrales ISR<br/>
                        Certificador: MEGAPRINT, S.A.<br/>
                        NIT: 50510231<br/>
                    	</div>
                    </t>
                    <t t-if="certificador_fel == 'g4s'">
                        Sujeto a pagos trimestrales ISR<br/>
                        Certificador<br/>
                        G4S DOCUMENTA, S. A.<br/>
                        NIT: 60010207<br/>
                    </t>
                    <t t-if="certificador_fel == 'gom'">
                        Sujeto a pagos trimestrales ISR<br/>
                        Certificador<br/>
                        GOM SOLUTIONS, SOCIEDAD ANONIMA<br/>
                        NIT: 95189416<br/>
                    </t>
                    <div class="pos-center-align">
                    <t t-if="firma_fel">
                    	
                    	<br/>
                        Autorización: <br/>
                        <t t-esc="firma_fel || ''"/><br/>
                        Fecha Certificación: <br/>
                        <t t-esc="order.formatted_validation_date"/>
                    	
                    </t>
                    <!--<t t-esc="order.name"/>--><br/>
                    GRACIAS POR SU COMPRA!
                    </div>
                    <t t-if="receipt.footer">
                        <br/>
                        <div style='text-align:center'>
                            <t t-esc="receipt.footer" />
                        </div>
                    </t>

                </t>
            </div>
        </t>
    </t>

</templates>
